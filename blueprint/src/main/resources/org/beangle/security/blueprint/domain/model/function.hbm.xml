<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.beangle.security.blueprint.domain.model" default-access="org.beangle.hibernate.PropertyAccessor">

  <typedef name="scope" class="org.beangle.hibernate.EnumType">
    <param name="type">org.beangle.security.blueprint.domain.Scope</param>
  </typedef>
  
  <class name="FuncResourceBean" abstract="true" entity-name="org.beangle.security.blueprint.domain.FuncResource">
    <id name="id" type="integer">
      <generator class="org.beangle.data.jpa.hibernate.TableSeqGenerator" />
    </id>
    <property name="name" not-null="true"/>
    <property name="scope" type="scope"/>
    <property name="title" not-null="true"/>
    <property name="enabled" not-null="true"/>
    <property name="actions"/>
    <property name="remark"/>
  </class>

  <class name="FuncPermissionBean" abstract="true" entity-name="org.beangle.security.blueprint.domain.FuncPermission">
    <id name="id" type="integer">
      <generator class="org.beangle.data.jpa.hibernate.TableSeqGenerator" />
    </id>
    <many-to-one name="role" not-null="true"/>
    <many-to-one name="resource" not-null="true"/>
    <property name="actions"/>
    <property name="restrictions"/>
    <property name="remark"/>
  </class>

</hibernate-mapping>